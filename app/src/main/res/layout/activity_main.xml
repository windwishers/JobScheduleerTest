<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fail.toepic.eater.jobscheduleertest.MainActivity">


    <android.support.constraint.Guideline
        android:id="@+id/beginline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin" />

    <android.support.constraint.Guideline
        android:id="@+id/endline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin" />

    <android.support.constraint.Guideline
        android:id="@+id/sendLine"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="100dp" />

    <android.support.constraint.Guideline
        android:id="@+id/cancelline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="100dp" />

    <android.support.constraint.Guideline
        android:id="@+id/topline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/margin" />

    <android.support.constraint.Guideline
        android:id="@+id/aunder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="63dp" />

    <android.support.constraint.Guideline
        android:id="@+id/bover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="71dp" />

    <android.support.constraint.Guideline
        android:id="@+id/bunder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="119dp" />

    <android.support.constraint.Guideline
        android:id="@+id/cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="127dp" />

    <android.support.constraint.Guideline
        android:id="@+id/cunder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="175dp" />

    <android.support.constraint.Guideline
        android:id="@+id/cancelallover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="183dp" />

    <android.support.constraint.Guideline
        android:id="@+id/cancelallunder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="231dp" />

    <Button
        android:id="@+id/a_send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/asend"
        app:layout_constraintTop_toTopOf="@id/topline"
        app:layout_constraintBottom_toBottomOf="@id/aunder"
        style="@style/AppTheme.send_button"
        />

    <TextView
        android:id="@+id/a_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/topline"
        app:layout_constraintBottom_toBottomOf="@id/aunder"
        style="@style/AppTheme.status_text"
        />

    <Button
        android:id="@+id/a_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/a_cancel"
        app:layout_constraintTop_toTopOf="@id/topline"
        app:layout_constraintBottom_toBottomOf="@id/aunder"
        style="@style/AppTheme.cancel_button"

        />

    <Button
        android:id="@+id/b_send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/b_send"
        app:layout_constraintTop_toTopOf="@id/bover"
        app:layout_constraintBottom_toBottomOf="@id/bunder"
        style="@style/AppTheme.send_button"
        />

    <TextView
        android:id="@+id/b_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/bover"
        app:layout_constraintBottom_toBottomOf="@id/bunder"
        style="@style/AppTheme.status_text"
        />

    <Button
        android:id="@+id/b_cancel"
        tools:background="@color/colorPrimaryDark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/b_cancel"
        app:layout_constraintTop_toTopOf="@id/bover"
        app:layout_constraintBottom_toBottomOf="@id/bunder"
        style="@style/AppTheme.cancel_button"
        />

    <Button
        android:id="@+id/c_send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/c_send"
        app:layout_constraintTop_toTopOf="@id/cover"
        app:layout_constraintBottom_toBottomOf="@id/cunder"
        style="@style/AppTheme.send_button"
        />

    <TextView

        android:id="@+id/c_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/cover"
        app:layout_constraintBottom_toBottomOf="@id/cunder"
        style="@style/AppTheme.status_text"
        />

    <Button
        android:id="@+id/c_cancel"
        tools:background="@color/colorPrimaryDark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/c_cancel"
        app:layout_constraintTop_toTopOf="@id/cover"
        app:layout_constraintBottom_toBottomOf="@id/cunder"
        style="@style/AppTheme.cancel_button"
        />

    <Button
        android:id="@+id/cancel_all"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/cancelallover"
        app:layout_constraintBottom_toBottomOf="@id/cancelallunder"
        app:layout_constraintStart_toStartOf="@id/beginline"
        app:layout_constraintEnd_toEndOf="@id/endline"
        android:text="@string/cancel_all"
        />
</android.support.constraint.ConstraintLayout>
